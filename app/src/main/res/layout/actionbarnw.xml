<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/what"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:imeOptions="actionSearch"
        android:inputType="textFilter"
        app:layout_constraintEnd_toStartOf="@+id/back"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:text="◀"
        app:layout_constraintEnd_toStartOf="@+id/reload"
        app:layout_constraintStart_toEndOf="@+id/what"
        app:showAsAction="always"
        tools:ignore="MissingConstraints"></Button>

    <Button
        android:id="@+id/reload"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:text="🔄"
        app:layout_constraintEnd_toStartOf="@+id/toHome"
        app:layout_constraintStart_toEndOf="@+id/back"
        app:layout_constraintTop_toTopOf="parent"
        app:showAsAction="always"
        tools:ignore="MissingConstraints"></Button>

    <Button
        android:id="@+id/toHome"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:text="🏠"
        app:layout_constraintEnd_toStartOf="@+id/favourite"
        app:layout_constraintStart_toEndOf="@+id/reload"
        app:layout_constraintTop_toTopOf="parent"
        app:showAsAction="always"
        tools:ignore="MissingConstraints"></Button>

    <Button
        android:id="@+id/favourite"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="★"
        app:layout_constraintEnd_toEndOf="parent"
        app:showAsAction="ifRoom"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="0dp"></Button>


</androidx.constraintlayout.widget.ConstraintLayout>